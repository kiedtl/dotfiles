[bar/bottom]
override-redirect = true
wm-restack        = i3
fixed-center      = true

monitor  =
bottom   = true
width    = 100%:-400
height   = 20
offset-y = 10
offset-x = 200

background    = ${colors.bg}
foreground    = ${colors.fg}
font-0        = ${fonts.cursed}
font-1        = ${fonts.cursed}
font-2        = ${fonts.siji}
separator     = " "
padding-left  = 0
padding-right = 0

modules-left   = rcmen memory-label memory filesystem-label filesystem
modules-center = mpd-label mpd
modules-right  = battery-label battery battery-charging brightness-label brightness powermenu

radius = 5
border-top-size = 2
border-bottom-size = 2
border-size = 2
border-color  = ${colors.bg}

